# ==================== SERVER ====================
NODE_ENV=development              # development | production
PORT=5000                         # Cổng chạy backend
CLIENT_URL=http://localhost:3000  # URL frontend
SECRET_KEY=your_secret_key_here   # Ví dụ: my_super_secret_key_123

# ==================== OAUTH ====================
# Google Login
GOOGLE_CLIENT_ID=your_google_client_id
# Ví dụ: 8039xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Ví dụ: GOCSPX-xxxxxxxxxxxxxxxx

# Facebook Login
FACEBOOK_CLIENT_ID=your_facebook_client_id
# Ví dụ: 654127647560970
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
# Ví dụ: 942a694ef1834a03a1e98f2c98fa4571

# ==================== JWT ====================
JWT_RESET_SECRET=your_jwt_reset_secret
# Ví dụ: reset_password_secret_123
DEFAULT_PAGE_LIMIT=8              # Số item mỗi trang

# ==================== EMAIL CONFIG ====================
# Cách 1: Gmail + App Password (development)
EMAIL_PROVIDER=gmail
EMAIL_USER=your_email@gmail.com
# Ví dụ: perfumora.shop@gmail.com
EMAIL_PASS=your_app_password
# Ví dụ: xcka tdwf gtqr gnld

# Cách 2: SendGrid (production)
# EMAIL_PROVIDER=sendgrid
# EMAIL_USER=apikey
# EMAIL_PASS=your_sendgrid_api_key

# Tên hiển thị trong email gửi cho khách hàng
EMAIL_FROM_NAME=Your Shop Name
# Ví dụ: Perfumora Shop

# ==================== DATABASE ====================
# DB_HOST=localhost                 # localhost | db (docker)
# DB_USER=root
# DB_PASSWORD=your_db_password
# # Ví dụ: 123456789
# DB_PORT=3306
# DB_NAME=your_database_name
# # Ví dụ: perfumedb
# DB_DIALECT=mysql

# ==================== ZALOPAY ====================
ZALO_APP_ID=your_zalopay_app_id
# Ví dụ: 2554
ZALO_KEY1=your_zalopay_key1
# Dùng để tạo chữ ký MAC
ZALO_KEY2=your_zalopay_key2
# Dùng để verify callback
ZALO_REDIRECT_URL=http://localhost:3000/account/orders
ZALO_API_ENDPOINT=https://sb-openapi.zalopay.vn/v2/create

# ==================== MYSQL CONTAINER ====================
